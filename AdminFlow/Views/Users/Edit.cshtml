@model EditViewModel


<h2>Kullanıcı Düzenle</h2>
<hr>
<form asp-action="Edit" method="post">
    <input type="hidden" name="Id" value="@Model.Id">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control">
        <div asp-validation-for="FullName" class="text-danger"></div>

    </div>
    <div class="mb-3">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control">
        <div asp-validation-for="Email" class="text-danger"></div>

    </div>
    <div class="card">
        <div class="card-header">
            Parola Güncelle
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control">
                <div asp-validation-for="Password" class="text-danger"></div>

            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control">
                <div asp-validation-for="ConfirmPassword" class="text-danger"></div>

            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            Roller
        </div>
        <div class="card-body">
            @foreach(var role in ViewBag.Roles)
            {
            <div class="form-check">
                <input type="checkbox" class="form-check-input" name="SelectedRoles" value="@role" id="@role"
                    @(Model.SelectedRoles?.Any(i=> i == role) == true ? "checked" : "")>
                <label for="@role" class="form-check-label">@role</label>
            </div>
            }

        </div>
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
</form>